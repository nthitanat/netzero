export const getProductById = (id) => {
  return productsData.find(product => product.id === parseInt(id));
};

export const getProductsByCategory = (category) => {
  if (!category) return productsData;
  return productsData.filter(product => product.category.toLowerCase() === category.toLowerCase());
};

export const getProductsByRegion = (region) => {
  if (!region) return productsData;
  return productsData.filter(product => product.region.toLowerCase() === region.toLowerCase());
};

export const getAvailableProducts = () => {
  return productsData.filter(product => product.inStock);
};

export const formatPrice = (price) => {
  return `${price.toLocaleString()} บาท`;
};
